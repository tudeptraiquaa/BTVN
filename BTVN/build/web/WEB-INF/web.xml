<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <filter>
        <filter-name>HomeFilter</filter-name>
        <filter-class>filter.HomeFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/auth/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>HomeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>TestAuth</servlet-name>
        <servlet-class>Auth.TestAuth</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InformationAuth</servlet-name>
        <servlet-class>Auth.InformationAuth</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InformationCustomer</servlet-name>
        <servlet-class>Customer.InformationCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestCustomer</servlet-name>
        <servlet-class>Customer.TestCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewNumber</servlet-name>
        <servlet-class>Admin.ViewNumber</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Home.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TotalView</servlet-name>
        <servlet-class>ViewNumber.TotalView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestAuth</servlet-name>
        <url-pattern>/auth/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InformationAuth</servlet-name>
        <url-pattern>/auth/infor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InformationCustomer</servlet-name>
        <url-pattern>/customer/infor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestCustomer</servlet-name>
        <url-pattern>/customer/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewNumber</servlet-name>
        <url-pattern>/viewnumber</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TotalView</servlet-name>
        <url-pattern>/viewPage</url-pattern>
    </servlet-mapping>
</web-app>
